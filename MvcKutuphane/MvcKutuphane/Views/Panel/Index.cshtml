@model MvcKutuphane.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Kütüphane Üyü Profil Bilgileri</h2>

@using (Html.BeginForm("Index2", "Panel", FormMethod.Post))
{
    <table class="table table-bordered table-hover" style="margin-top:30px">
        <tr>
            <td>
                <label style="font-weight:bolder">Email Adresi:</label> @HttpContext.Current.User.Identity.Name
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Ad:</label>
                @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Soyad:</label>
                @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Kullanıcı Adı:</label>
                @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Şifre:</label>
                @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Fotoğraf:</label>
                @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bolder">Okul:</label>
                @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <button class="btn btn-warning">Güncelle</button>
            </td>
        </tr>
    </table>
}