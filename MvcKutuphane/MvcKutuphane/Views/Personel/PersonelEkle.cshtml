@model MvcKutuphane.Models.Entity.TBLPERSONEL

@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<form class="form-group" method="post">
    <div style="margin-top: 15px">
        <label>Personel Adı</label>
        @*<input type="text" class="form-control" id="Btn1" name="PERSONEL" />*@
        @Html.TextBoxFor(x => x.PERSONEL, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.PERSONEL, "Personel Adı Boş Geçilemez", new { @style = "color:red" })
    </div>
    <div style="margin-top: 15px">
        <button class="btn btn-info" id="Btn1">Personel Ekle</button>
    </div>
</form>

